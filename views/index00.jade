doctype html
html(ng-app)
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, user-scalable=no')
    title= title
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-beta.10/angular.min.js')
    script(src='public/javascripts/todo.js')
    link(rel='public/stylesheets/todo.css')
  body
    h2= Todo
    div(ng-controller="TodoCtrl")
      span {{remaining()}} of {{todos.length}} remaining
      ul(class='unstyled')
        li(ng-repeat='todo in todos')
          input(type='checkbox', ng-model='todo.done')
          span(class="done-{{todo.done}}") {{todo.text}}
      form(ng-submit='addTodo()')
        input(type='text', ng-model='todoText', size='30', placeholder='add new todo here')
        input(class='btn-primary', type='submit', value='add')